{
  "name": "express_typescript",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": "^18.0.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./dist/bin/www",
    "start:dev": "cross-env NODE_ENV=dev nodemon ./bin/www",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "test": "jest",
    "ts-jest": "ts-jest",
    "test:unit": "ENV_FILE=./.env.test jest --verbose --coverage"
  },
  "dependencies": {
    "@google-cloud/storage": "^6.10.0",
    "@types/nodemailer": "^6.4.7",
    "bcryptjs": "^2.4.3",
    "connect-history-api-fallback": "^2.0.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.7",
    "debug": "~2.6.9",
    "dotenv": "^16.0.3",
    "express": "~4.16.1",
    "firebase-admin": "^11.7.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.4",
    "morgan": "~1.9.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.1",
    "socket.io": "^4.6.1",
    "uuid": "^9.0.0",
    "validator": "^13.9.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/connect-history-api-fallback": "^1.3.5",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/uuid": "^9.0.1",
    "@types/validator": "^13.7.15",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "nodemonConfig": {
    "watch": [
      "./"
    ],
    "ext": "ts,json",
    "execMap": {
      "ts": "node --require ts-node/register"
    }
  }
}
